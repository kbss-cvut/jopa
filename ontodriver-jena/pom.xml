    <description>Jena implementation of the OntoDriver API</description>

    <properties>
        <org.apache.jena.version>3.17.0</org.apache.jena.version>
    </properties>

    <dependencies>
        <dependency>
            <groupId>cz.cvut.kbss.jopa</groupId>
            <artifactId>ontodriver-api</artifactId>
